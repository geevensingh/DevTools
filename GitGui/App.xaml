<Application x:Class="GitGui.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GitGui"
             StartupUri="Windows/MainWindow.xaml">
    <Application.Resources>
        <Style x:Name="GlobalWindowStyle" TargetType="Window">
            <Setter Property="FontSize" Value="22" />
        </Style>
        <Style x:Name="GlobalTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22" />
        </Style>
        <Style x:Name="GlobalCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="22" />
        </Style>
        <Style x:Name="GlobalTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="22" />
        </Style>
        <Style x:Name="GlobalButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10,5" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="FontSize" Value="25" />
        </Style>
    </Application.Resources>
</Application>
