<UserControl
    x:Class="JsonViewer.MainWindowToolbar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JsonViewer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Root"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    Loaded="OnLoaded"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BitmapImage x:Key="ExpandAllImage" UriSource="..\Resources\expand_all.png" />
        <BitmapImage x:Key="CollapseAllImage" UriSource="..\Resources\collapse_all.png" />
        <BitmapImage x:Key="OpenFileImage" UriSource="..\Resources\open_file.png" />
        <BitmapImage x:Key="OrgImage" UriSource="..\Resources\org.png" />
        <BitmapImage x:Key="WindowImage" UriSource="..\Resources\window.png" />
        <BitmapImage x:Key="RightImage" UriSource="..\Resources\right.png" />
        <BitmapImage x:Key="LeftImage" UriSource="..\Resources\left.png" />
    </UserControl.Resources>
    <ToolBarTray Background="White" DataContext="{Binding ElementName=Root}">
        <ToolBar Band="1" BandIndex="1">
            <Button
                x:Name="OpenJsonFileButton"
                Command="local:CommandFactory.OpenJsonFile"
                DataContext="{Binding Path=Command, RelativeSource={RelativeSource Self}}"
                ToolTip="{Binding Path=Text}">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <Image
                        Height="25"
                        Source="{StaticResource OpenFileImage}"
                        Visibility="{Binding ElementName=Root, Path=ToolbarIconVisibility}" />
                    <TextBlock
                        Margin="5,0"
                        VerticalAlignment="Center"
                        Text="{Binding Path=Text}"
                        Visibility="{Binding ElementName=Root, Path=ToolbarTextVisibility}" />
                </StackPanel>
            </Button>
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
            <Button
                x:Name="ExpandAllButton"
                Command="local:CommandFactory.ExpandAll"
                DataContext="{Binding Path=Command, RelativeSource={RelativeSource Self}}"
                ToolTip="{Binding Path=Text}">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <Image
                        Height="25"
                        Source="{StaticResource ExpandAllImage}"
                        Visibility="{Binding ElementName=Root, Path=ToolbarIconVisibility, Mode=OneWay}" />
                    <TextBlock
                        Margin="5,0"
                        VerticalAlignment="Center"
                        Text="{Binding Path=Text}"
                        Visibility="{Binding ElementName=Root, Path=ToolbarTextVisibility}" />
                </StackPanel>
            </Button>
            <Button
                x:Name="CollapseAllButton"
                Command="local:CommandFactory.CollapseAll"
                DataContext="{Binding Path=Command, RelativeSource={RelativeSource Self}}"
                ToolTip="{Binding Path=Text}">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <Image
                        Height="25"
                        Source="{StaticResource CollapseAllImage}"
                        Visibility="{Binding ElementName=Root, Path=ToolbarIconVisibility}" />
                    <TextBlock
                        Margin="5,0"
                        VerticalAlignment="Center"
                        Text="{Binding Path=Text}"
                        Visibility="{Binding ElementName=Root, Path=ToolbarTextVisibility}" />
                </StackPanel>
            </Button>
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
            <CheckBox
                x:Name="HighlightParentsButton"
                Command="local:CommandFactory.HighlightParents"
                DataContext="{Binding Path=Command, RelativeSource={RelativeSource Self}}"
                IsChecked="True"
                ToolTip="{Binding Path=Text}">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <Image
                        Height="25"
                        Source="{StaticResource OrgImage}"
                        Visibility="{Binding ElementName=Root, Path=ToolbarIconVisibility}" />
                    <TextBlock
                        Margin="5,0"
                        VerticalAlignment="Center"
                        Text="{Binding Path=Text}"
                        Visibility="{Binding ElementName=Root, Path=ToolbarTextVisibility}" />
                </StackPanel>
            </CheckBox>
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
            <Button
                x:Name="NewWindowButton"
                Command="{Binding ElementName=Root, Path=NewWindowCommand}"
                DataContext="{Binding Path=Command, RelativeSource={RelativeSource Self}}"
                ToolTip="{Binding Path=Text}">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <Image
                        Height="25"
                        Source="{StaticResource WindowImage}"
                        Visibility="{Binding ElementName=Root, Path=ToolbarIconVisibility}" />
                    <TextBlock
                        Margin="5,0"
                        VerticalAlignment="Center"
                        Text="{Binding Path=Text}"
                        Visibility="{Binding ElementName=Root, Path=ToolbarTextVisibility}" />
                </StackPanel>
            </Button>
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
            <TextBlock
                Margin="5,0"
                VerticalAlignment="Center"
                Visibility="{Binding Path=ToolbarTextVisibility}">
                Find:
            </TextBlock>
            <TextBox
                x:Name="FindTextBox"
                MinWidth="200"
                MaxWidth="600"
                TextChanged="FindTextBox_TextChanged" />

            <StackPanel Orientation="Horizontal" Visibility="{Binding Path=FindMatchNavigator.ShowFindControls}">
                <TextBlock Margin="5,0" VerticalAlignment="Center">Matches:</TextBlock>
                <TextBlock
                    Margin="5,0"
                    VerticalAlignment="Center"
                    Text="{Binding Path=FindMatchNavigator.FindMatchText}" />
            </StackPanel>
            <Button
                x:Name="FindPreviousButton"
                Command="local:CommandFactory.FindPrevious"
                DataContext="{Binding Path=Command, RelativeSource={RelativeSource Self}}"
                ToolTip="{Binding Path=Text}"
                Visibility="{Binding ElementName=Root, Path=FindMatchNavigator.ShowFindControls}">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <Image
                        Height="25"
                        Source="{StaticResource LeftImage}"
                        Visibility="{Binding ElementName=Root, Path=ToolbarIconVisibility}" />
                    <TextBlock
                        Margin="5,0"
                        VerticalAlignment="Center"
                        Text="{Binding Path=Text}"
                        Visibility="{Binding ElementName=Root, Path=ToolbarTextVisibility}" />
                </StackPanel>
            </Button>
            <Button
                x:Name="FindNextButton"
                Command="local:CommandFactory.FindNext"
                DataContext="{Binding Path=Command, RelativeSource={RelativeSource Self}}"
                ToolTip="{Binding Path=Text}"
                Visibility="{Binding ElementName=Root, Path=FindMatchNavigator.ShowFindControls}">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <Image
                        Height="25"
                        Source="{StaticResource RightImage}"
                        Visibility="{Binding ElementName=Root, Path=ToolbarIconVisibility}" />
                    <TextBlock
                        Margin="5,0"
                        VerticalAlignment="Center"
                        Text="{Binding Path=Text}"
                        Visibility="{Binding ElementName=Root, Path=ToolbarTextVisibility}" />
                </StackPanel>
            </Button>
        </ToolBar>
    </ToolBarTray>
</UserControl>
